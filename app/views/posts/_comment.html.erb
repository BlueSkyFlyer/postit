<div class="row">
  <div class='span0 well text-center'>
    <%= link_to vote_post_comment_path(comment: comment, post_id: comment.post_id, vote: true), method: 'post' do %>
      <i class='icon-arrow-up'></i>
    <% end %> 
    <br/>
    <span><%= comment.total_votes %></span>
    <br/>
    <%= link_to vote_post_comment_path(comment: comment, post_id: comment.post_id, vote: false), method: 'post' do %>
      <i class='icon-arrow-down'></i>
    <% end %>
  </div>

  <div class='span8 well'>
    <p>
      <%= comment.body %>
    </p>
    <p>
      <span class="quiet">posted by</span> <%= link_to comment.creator.username, '' %>
      <small> at <%= display_datetime(comment.created_at) %></small>
    </p>
  </div>
</div>