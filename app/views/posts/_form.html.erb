<%= render 'shared/errors', obj: @post %>

<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br/>
  <%= f.label :url %>
  <%= f.text_field :url %>
  <br/>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br/>
  <%= f.label :categories %>
  <%= f.collection_select(:category_ids, Category.all, :id, :name, {:prompt => "CTRL + Click for multiple"}, { :multiple => true }) %>
  <br/>
  <%= f.submit "Create Post" %>
<% end %>